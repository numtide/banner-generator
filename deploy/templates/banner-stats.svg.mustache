<svg width="1280" height="640" viewBox="0 0 1280 640" fill="none" xmlns="http://www.w3.org/2000/svg">
<style>
{{fontCSS}}

/* Default dark mode colors */
:root {
  --bg-color: #0d1117;
  --text-color: #ffffff;
  --accent-color: #58a6ff;
  --muted-color: #8b949e;
  --border-color: #30363d;
}

/* Light mode colors */
@media (prefers-color-scheme: light) {
  :root {
    --bg-color: #ffffff;
    --text-color: #24292e;
    --accent-color: #0969da;
    --muted-color: #57606a;
    --border-color: #d0d7de;
  }
}

.background { fill: var(--bg-color); }
.text { fill: var(--text-color); }
.muted { fill: var(--muted-color); }
.accent { fill: var(--accent-color); }
.border { stroke: var(--border-color); }
</style>

<rect width="1280" height="640" class="background"/>

<!-- Grid pattern -->
<g opacity="0.3">
  <rect x="320" width="1" height="640" fill="var(--border-color)"/>
  <rect x="640" width="1" height="640" fill="var(--border-color)"/>
  <rect x="960" width="1" height="640" fill="var(--border-color)"/>
</g>

<!-- Repository name -->
<text class="text" font-family="GT Pressura" font-size="{{repoNameFontSize}}" font-weight="700" letter-spacing="-0.02em">
  <tspan x="80" y="300">{{repoName}}</tspan>
</text>

<!-- Description -->
{{#hasDescription}}
<text class="muted" font-family="GT Pressura" font-size="36">
{{#descriptionLines}}
  <tspan x="80" y="{{y}}">{{text}}</tspan>
{{/descriptionLines}}
</text>
{{/hasDescription}}

<!-- Stats row -->
<g transform="translate(80, 500)">
  {{#hasStats}}
  <!-- Stars -->
  <g id="stars">
    <path d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z" class="accent" transform="scale(2)"/>
    <text class="text" font-family="GT Pressura" font-size="32" font-weight="600">
      <tspan x="40" y="20">{{stars}}</tspan>
    </text>
  </g>
  
  <!-- Forks -->
  <g transform="translate(150, 0)" id="forks">
    <path d="M5 3.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm0 2.122a2.25 2.25 0 10-1.5 0v.878A2.25 2.25 0 005.75 8.5h1.5v2.128a2.251 2.251 0 101.5 0V8.5h1.5a2.25 2.25 0 002.25-2.25v-.878a2.25 2.25 0 10-1.5 0v.878a.75.75 0 01-.75.75h-4.5A.75.75 0 015 6.25v-.878zm3.75 7.378a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm3-8.75a.75.75 0 100-1.5.75.75 0 000 1.5z" class="accent" transform="scale(2)"/>
    <text class="text" font-family="GT Pressura" font-size="32" font-weight="600">
      <tspan x="40" y="20">{{forks}}</tspan>
    </text>
  </g>
  {{/hasStats}}
  
  <!-- Language -->
  {{#hasLanguage}}
  <g transform="translate(300, 0)" id="language">
    <circle cx="12" cy="12" r="12" class="accent" opacity="0.2"/>
    <circle cx="12" cy="12" r="8" class="accent"/>
    <text class="text" font-family="GT Pressura" font-size="32" font-weight="600">
      <tspan x="35" y="20">{{language}}</tspan>
    </text>
  </g>
  {{/hasLanguage}}
</g>

<!-- Owner badge in corner -->
<g transform="translate(1100, 80)">
  <rect x="0" y="0" width="120" height="40" rx="20" class="border" fill="none" stroke-width="2"/>
  <text class="muted" font-family="GT Pressura" font-size="20" text-anchor="middle">
    <tspan x="60" y="27">{{owner}}</tspan>
  </text>
</g>

<!-- Decorative gradient orbs -->
<defs>
  <radialGradient id="grad1">
    <stop offset="0%" style="stop-color:var(--accent-color);stop-opacity:0.2"/>
    <stop offset="100%" style="stop-color:var(--accent-color);stop-opacity:0"/>
  </radialGradient>
</defs>

<g opacity="0.5">
  <circle cx="1100" cy="400" r="200" fill="url(#grad1)"/>
  <circle cx="200" cy="100" r="150" fill="url(#grad1)"/>
</g>
</svg>